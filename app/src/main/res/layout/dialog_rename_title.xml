<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_horizontal_margin">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rename Title"
        android:textSize="@dimen/text_20sp"
        android:textStyle="bold"
        android:textColor="@color/primaryColorAccent"
        android:layout_marginBottom="@dimen/activity_horizontal_margin" />

    <EditText
        android:id="@+id/createListDialogRenameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="13" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/createListDialogCancelButton"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:text="Cancel"
            android:textColor="@color/white"
            android:background="@drawable/button_selector"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/createListDialogOkButton"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:text="@string/create_list_dialog_ok_button"
            android:textColor="@color/white"
            android:background="@drawable/button_selector"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>


</LinearLayout>