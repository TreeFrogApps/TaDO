<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.treefrogapps.TaDo.TaDOChooserTabFragment1">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/eight_dp"
        card_view:cardCornerRadius="@dimen/four_dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="9"
                    android:layout_margin="@dimen/activity_vertical_margin"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/taDOChooserFragment1ListTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="@string/tado_chooser_framgent_1_list_text_view"
                        android:textColor="@color/primaryText"
                        android:textSize="@dimen/text_22sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/four_dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/taDOChooserFragment1MenuButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_dots_menu"/>
                </LinearLayout>



            </LinearLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_light" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:layout_weight="1"
                    android:text="@string/tado_chooser_fragment_1_task"
                    android:textColor="@color/primaryColorAccent"
                    android:textSize="@dimen/text_16sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end">

                    <TextView
                        android:id="@+id/taDOChooserFragment1PriorityTextView"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="@dimen/activity_vertical_margin"
                        android:layout_marginLeft="@dimen/activity_vertical_margin"
                        android:layout_marginTop="@dimen/activity_horizontal_margin"
                        android:background="@drawable/priority_circle_zero_40dp"
                        android:textSize="@dimen/text_18sp" />

                </LinearLayout>
            </LinearLayout>


            <TextView
                android:id="@+id/taDOChooserFragment1ItemTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:text="@string/tado_chooser_framgent_1_item_text_view"
                android:textColor="@color/primaryText"
                android:textSize="@dimen/text_20sp" />

            <TextView
                android:id="@+id/taDOChooserFragment1ItemDetailTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/four_dp"
                android:maxLines="3"
                android:text="@string/tado_chooser_framgent_1_item_text_view"
                android:textColor="@color/grey_dark"
                android:textSize="@dimen/text_16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/four_dp"
                android:gravity="end">

                <TextView
                    android:id="@+id/taDOChooserFragment1HoursTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:textColor="@color/primaryColor"
                    android:textSize="@dimen/text_12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:text="@string/recycler_view_hours"
                    android:textColor="@color/primaryColor"
                    android:textSize="@dimen/text_12sp" />

                <TextView
                    android:id="@+id/taDOChooserFragment1MinsTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:textColor="@color/primaryColor"
                    android:textSize="@dimen/text_12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/recycler_view_mins"
                    android:textColor="@color/primaryColor"
                    android:textSize="@dimen/text_12sp" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:max="500"
                android:progress="499"
                android:layout_gravity="center"
                android:progressDrawable="@drawable/timer_circle" />

            <ProgressBar
                android:id="@+id/taDOChooserFragment1Timer"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:max="500"
                android:progress="0"
                android:layout_gravity="center"
                android:progressDrawable="@drawable/timer_circle_grey" />

            <TextView
                android:id="@+id/taDOChooserFragmentTimerTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/primaryColor"
                android:text="00:14:25"
                android:textSize="@dimen/text_36sp"
                android:layout_gravity="center"/>
        </FrameLayout>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal|bottom">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:gravity="center_horizontal|bottom"
                android:weightSum="2">

                <Button
                    android:id="@+id/taDOChooserFragment1RemoveButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primaryColor"
                    android:textSize="@dimen/text_22sp"
                    android:background="@drawable/button_selector"
                    android:text="@string/tado_chooser_fragment_1_remove_button"
                    style="?android:attr/borderlessButtonStyle"
                    android:paddingLeft="@dimen/activity_vertical_margin"
                    android:paddingRight="@dimen/activity_vertical_margin"
                    android:clickable="true"/>

                <Button
                    android:id="@+id/taDOChooserFragment1StartButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primaryColor"
                    android:textSize="@dimen/text_22sp"
                    android:background="@drawable/button_selector"
                    android:text="@string/tado_chooser_fragment_1_start_button"
                    style="?android:attr/borderlessButtonStyle"
                    android:paddingLeft="@dimen/activity_vertical_margin"
                    android:paddingRight="@dimen/activity_vertical_margin"
                    android:clickable="true"/>

            </LinearLayout>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/createItemsFAB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:src="@mipmap/ic_fab_plus_item"
                android:visibility="invisible"
                app:borderWidth="0dp"
                app:elevation="6dp"
                app:pressedTranslationZ="12dp" />

        </FrameLayout>




    </LinearLayout>


</LinearLayout>






