<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.treefrogapps.TaDo.HomeFragment"
    android:weightSum="4">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/eight_dp"
        android:layout_marginLeft="@dimen/eight_dp">


        <Spinner
            android:id="@+id/homeFragmentTitlesSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_dots_menu"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/eight_dp"
        android:layout_marginLeft="@dimen/eight_dp">

        <LinearLayout
            android:id="@+id/homeFragmentListSpecLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/eight_dp"
            android:weightSum="8">

            <TextView
                android:gravity="end"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/fragment_home_tado_items"
                android:textColor="@color/brown_text_normal"
                android:textSize="@dimen/text_16sp"/>

            <TextView
                android:gravity="start"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:text="@string/fragment_home_items"
                android:textColor="@color/brown_text_normal"
                android:textSize="@dimen/text_16sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:text="@string/fragment_home_tado_items"
                android:textColor="@color/brown_text_normal"
                android:textSize="@dimen/text_16sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/fragment_home_tado_items"
                android:textColor="@color/brown_text_normal"
                android:textSize="@dimen/text_16sp"/>


        </LinearLayout>

        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_home_tado_items"
            android:textColor="@color/brown_text_normal"
            android:textSize="@dimen/text_16sp"
            android:layout_marginLeft="@dimen/eight_dp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/homeFragmentRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context="com.treefrogapps.TaDo.HomeFragment"
            android:scrollbars="vertical"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/homeFragmentFAB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:elevation="6dp"
            app:pressedTranslationZ="12dp"
            app:borderWidth="0dp"
            android:layout_gravity="bottom|end"
            android:src="@mipmap/ic_fab_plus"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:visibility="invisible"/>

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/createListButtonLayout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="vertical"
        android:gravity="bottom"
        android:visibility="gone">

        <Button
            android:id="@+id/homeFragmentRemoveListButton"
            android:text="@string/fragment_home_remove_list"
            android:textSize="@dimen/text_16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_selector"
            android:visibility="visible"
            />

    </LinearLayout>


</LinearLayout>
