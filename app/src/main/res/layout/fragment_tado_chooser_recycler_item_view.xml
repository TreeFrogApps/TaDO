<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/four_dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/eight_dp"
        android:layout_marginRight="@dimen/eight_dp"
        android:layout_marginTop="@dimen/four_dp"
        android:layout_marginBottom="@dimen/four_dp">

        <LinearLayout
            android:id="@+id/taDOChooserRecyclerCardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/recycler_item_selector">

            <TextView
                android:id="@+id/taDOChooserRecyclerItemListTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:text="@string/tado_chooser_fragment_2_list_text_view"
                android:textColor="@color/primaryText"
                android:textSize="@dimen/text_22sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/eight_dp"
                android:background="@color/grey_light" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:layout_weight="1"
                    android:text="@string/tado_chooser_fragment_2_task"
                    android:textColor="@color/primaryColorAccent"
                    android:textSize="@dimen/text_16sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end">

                    <TextView
                        android:id="@+id/taDOChooserRecyclerItemPriorityTextView"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="@dimen/activity_vertical_margin"
                        android:background="@drawable/priority_circle_zero_40dp"
                        android:gravity="center"
                        android:text="!"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_22sp" />

                </LinearLayout>
            </LinearLayout>


            <TextView
                android:id="@+id/taDOChooserRecyclerItemItemTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:text="@string/tado_chooser_fragment_2_item_text_view"
                android:textColor="@color/primaryText"
                android:textSize="@dimen/text_20sp" />

            <TextView
                android:id="@+id/taDOChooserRecyclerItemItemDetailTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/four_dp"
                android:maxLines="3"
                android:text="@string/tado_chooser_fragment_2_item_text_view"
                android:textColor="@color/grey_dark"
                android:textSize="@dimen/text_16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/four_dp"
                android:gravity="end">

                <TextView
                    android:id="@+id/taDOChooserRecyclerItemHoursTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:textColor="@color/primaryColor"
                    android:textSize="@dimen/text_12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:text="@string/recycler_view_hours"
                    android:textColor="@color/primaryColor"
                    android:textSize="@dimen/text_12sp" />

                <TextView
                    android:id="@+id/taDOChooserRecyclerItemMinsTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:textColor="@color/primaryColor"
                    android:textSize="@dimen/text_12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/recycler_view_mins"
                    android:textColor="@color/primaryColor"
                    android:textSize="@dimen/text_12sp" />

            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>