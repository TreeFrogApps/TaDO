<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="MyTheme">
        <!-- Customize your theme here. -->
    </style>

    <style name="MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="colorAccent">@color/primaryColorAccent</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <!-- text color for nav menu items text -->
        <item name="itemTextColor">#de000000</item>
    </style>

    <style name="ToolbarPopMenu" parent="ThemeOverlay.AppCompat">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextColor" parent="MyTheme">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MySpinnerStyle" parent="">
        <item name="android:textColor">@color/primaryColorDark</item>
    </style>

    <style name="EditTextColors" parent="">
        <item name="colorControlNormal">@color/brown_text_light</item>
    </style>

</resources>
