<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="MyTheme">
        <!-- Customize your theme here. -->
    </style>

    <style name="MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="colorAccent">@color/primaryColorAccent</item>
        <item name="android:textColorPrimary">@color/grey_light</item>
        <item name="colorControlNormal">@color/grey_light</item>
        <!-- text color for nav menu items text -->
        <item name="itemTextColor">@color/brown_text_dark</item>
    </style>

    <style name="ToolbarPopMenu" parent="ThemeOverlay.AppCompat">
        <item name="android:textColor">@color/brown_text_dark</item>
    </style>

    <style name="TextColor" parent="MyTheme">
        <item name="android:textColor">@color/brown_text_dark</item>
    </style>

    <style name="EditTextColors" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/brown_text_dark</item>
    </style>

    <!-- splash screen styles -->

    <style name="myDialogWindowAnimation" parent="">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/SplashScreenAnim</item>
    </style>

    <style name="SplashScreenAnim" parent="">
        <item name="android:windowEnterAnimation">@anim/move_in_bottom_to_middle_anim</item>
        <item name="android:windowExitAnimation">@anim/move_out_middle_to_bottom_anim</item>
    </style>


</resources>
