<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="MyTheme">
        <!-- Customize your theme here. -->
    </style>

    <style name="MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="colorAccent">@color/primaryColorAccent</item>
        <item name="android:textColorPrimary">@color/grey_light</item>
        <item name="colorControlNormal">@color/grey_light</item>
        <!-- text color for nav menu items text -->
        <item name="itemTextColor">@color/primaryText</item>
    </style>

    <style name="ToolbarPopMenu" parent="ThemeOverlay.AppCompat">
        <item name="android:textColor">@color/primaryText</item>
    </style>

    <style name="TextColor" parent="MyTheme">
        <item name="android:textColor">@color/primaryText</item>
    </style>

    <style name="EditTextColors" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/primaryText</item>
    </style>

    <style name="PopUpMenu" parent="MyTheme">
        <item name="android:popupBackground">@color/white</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">@dimen/text_16sp</item>
        <item name="colorAccent">@color/primaryColor</item>
    </style>
    
    <style name="Base.Widget.Design.TabLayout" parent="android:Widget">
        <item name="tabIndicatorColor">@color/primaryColorAccent</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
    </style>
        

</resources>
